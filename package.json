{
  "name": "lunchmc",
  "version": "1.0.1",
  "description": "This is LunchMc is Minecraft Launcher to have a lot of fun",
  "main": "src\\client\\app.js",
  "author": "VicTorWorldYt",
  "license": "MITT",
  "build" : { 
    "appId": "com.victorworldyt.lunchmc",
    "productName": "LunchMC",
    "asar": true,
    "directories": {
      "output": "build"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "/build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@xmcl/core": "^2.10.1",
    "@xmcl/installer": "^4.4.0",
    "@xmcl/user": "^2.1.8",
    "minecraft-launcher-core": "^3.16.18",
    "node-fetch": "^2.6.9",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.4",
    "vite": "^4.1.4",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vuetify": "^3.1.6"
  },
  "devDependencies": {
    "electron": "^22.3.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-updater": "^5.3.0"
  }
}
